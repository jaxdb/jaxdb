  <xs:complexType name="tableType">
    <xs:complexContent>
      <xs:extension base="xdl:namedType">
        <xs:sequence>
          <xs:element name="column" type="xdl:columnType" minOccurs="0" maxOccurs="unbounded"/>
          <xs:element name="constraints" minOccurs="0">
            <xs:complexType>
              <xs:sequence>
                <xs:element name="primaryKey" minOccurs="0">
                  <xs:complexType>
                    <xs:sequence maxOccurs="unbounded">
                      <xs:element name="column" type="xdl:namedType"/>
                    </xs:sequence>
                  </xs:complexType>
                  <xs:unique name="primaryKeyColumn">
                    <xs:selector xpath="./xdl:column"/>
                    <xs:field xpath="@name"/>
                  </xs:unique>
                </xs:element>
                <xs:element name="foreignKey" minOccurs="0" maxOccurs="unbounded">
                  <xs:complexType>
                    <xs:complexContent>
                      <xs:extension base="xdl:foreignKeyType">
                        <xs:sequence>
                          <xs:element name="column" maxOccurs="unbounded">
                            <xs:complexType>
                              <xs:complexContent>
                                <xs:extension base="xdl:namedType">
                                  <xs:attribute name="column" type="xdl:nameType" use="required"/>
                                </xs:extension>
                              </xs:complexContent>
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:extension>
                    </xs:complexContent>
                  </xs:complexType>
                </xs:element>
                <xs:element name="autoIncrement" minOccurs="0">
                  <xs:complexType>
                    <xs:attribute name="column" type="xs:NCName" use="required"/>
                  </xs:complexType>
                </xs:element>
                <xs:sequence maxOccurs="unbounded">
                  <xs:element name="unique" minOccurs="0">
                    <xs:complexType>
                      <xs:sequence maxOccurs="unbounded">
                        <xs:element name="column" type="xdl:namedType"/>
                      </xs:sequence>
                    </xs:complexType>
                    <xs:unique name="uniqueColumnName1">
                      <xs:selector xpath="./xdl:column"/>
                      <xs:field xpath="@name"/>
                    </xs:unique>
                  </xs:element>
                  <xs:element name="check" minOccurs="0" type="xdl:checkType"/>
                </xs:sequence>
              </xs:sequence>
            </xs:complexType>
            <xs:unique name="uniqueUniqueColumn">
              <xs:selector xpath="./xdl:unique"/>
              <xs:field xpath="@column"/>
            </xs:unique>
          </xs:element>
          <xs:element name="relation" type="xdl:relationType" minOccurs="0"/>
