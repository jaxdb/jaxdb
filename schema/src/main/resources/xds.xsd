<xs:schema
  elementFormDefault="qualified"
  targetNamespace="http://xdb.safris.org/xds.xsd"
  xmlns:xds="http://xdb.safris.org/xds.xsd"
  xmlns:xs="http://www.w3.org/2001/XMLSchema">
  
  <xs:include schemaLocation="xds-common.xsd"/>
  
  <!-- text data -->
  
  <xs:complexType name="char">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:sequence minOccurs="0">
          <xs:element name="check">
            <xs:complexType>
              <xs:attribute name="operator" type="xds:equalityOperator" use="required"/>
              <xs:attribute name="condition" type="xs:string" use="required"/>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
        <xs:attributeGroup ref="xds:char"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="clob">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:sequence minOccurs="0">
          <xs:element name="check">
            <xs:complexType>
              <xs:attribute name="operator" type="xds:equalityOperator" use="required"/>
              <xs:attribute name="condition" type="xs:string" use="required"/>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
        <xs:attributeGroup ref="xds:clob"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <!-- binary data -->
  
  <xs:complexType name="binary">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:binary"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="blob">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:blob"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- numeric data -->
  
  <xs:complexType name="smallint">
    <xs:complexContent>
      <xs:extension base="xds:integer">
        <xs:attribute name="precision" use="required">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="1"/>
              <xs:maxInclusive value="3"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="default">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-128"/>
              <xs:maxInclusive value="255"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="min">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-128"/>
              <xs:maxInclusive value="255"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="max">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-128"/>
              <xs:maxInclusive value="255"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="mediumint">
    <xs:complexContent>
      <xs:extension base="xds:integer">
        <xs:attribute name="precision" use="required">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="1"/>
              <xs:maxInclusive value="5"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="default">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-8388608"/>
              <xs:maxInclusive value="16777215"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="min">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-8388608"/>
              <xs:maxInclusive value="16777215"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="max">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-8388608"/>
              <xs:maxInclusive value="16777215"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="int">
    <xs:complexContent>
      <xs:extension base="xds:integer">
        <xs:attribute name="precision" use="required">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="1"/>
              <xs:maxInclusive value="10"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="default">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-2147483648"/>
              <xs:maxInclusive value="4294967295"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="min">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-2147483648"/>
              <xs:maxInclusive value="4294967295"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="max">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-2147483648"/>
              <xs:maxInclusive value="4294967295"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="bigint">
    <xs:complexContent>
      <xs:extension base="xds:integer">
        <xs:attribute name="precision" use="required">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="1"/>
              <xs:maxInclusive value="20"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="default">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-9223372036854775808"/>
              <xs:maxInclusive value="18446744073709551615"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="min">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-9223372036854775808"/>
              <xs:maxInclusive value="18446744073709551615"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
        <xs:attribute name="max">
          <xs:simpleType>
            <xs:restriction base="xs:integer">
              <xs:minInclusive value="-9223372036854775808"/>
              <xs:maxInclusive value="18446744073709551615"/>
            </xs:restriction>
          </xs:simpleType>
        </xs:attribute>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <!-- REAL is synonym for FLOAT(24) -->
  
  <xs:complexType name="float">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:sequence minOccurs="0">
          <xs:element name="check">
            <xs:complexType>
              <xs:attribute name="operator" type="xds:rangeOperator" use="required"/>
              <xs:attribute name="condition" type="xs:decimal" use="required"/>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
        <xs:attributeGroup ref="xds:float"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <!-- NUMERIC is synonym for DECIMAL -->
  
  <xs:complexType name="decimal">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:sequence minOccurs="0">
          <xs:element name="check">
            <xs:complexType>
              <xs:attribute name="operator" type="xds:rangeOperator" use="required"/>
              <xs:attribute name="condition" type="xs:decimal" use="required"/>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
        <xs:attributeGroup ref="xds:decimal"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <!-- time data -->

  <xs:complexType name="date">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:date"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="time">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:time"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <xs:complexType name="dateTime">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:dateTime"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <!-- boolean -->
  
  <xs:complexType name="boolean">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:boolean"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <!-- enum -->
  
  <xs:complexType name="enum">
    <xs:complexContent>
      <xs:extension base="xds:column">
        <xs:attributeGroup ref="xds:enum"/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>
  
  <!-- containers -->
  
  <xs:complexType name="schema">
    <xs:complexContent>
      <xs:extension base="xds:compliant">
        <xs:sequence>
          <xs:element name="table" type="xds:table" minOccurs="0" maxOccurs="unbounded">
            <!--<xs:unique name="primaryKey">
              <xs:selector xpath="*"/>
              <xs:field xpath="@primary"/>
            </xs:unique>-->
            <xs:key name="keyColumnName">
              <xs:selector xpath="./xds:column"/>
              <xs:field xpath="@name"/>
            </xs:key>
            <xs:keyref name="keyrefColumnName1" refer="xds:keyColumnName">
              <xs:selector xpath="./xds:constraints/xds:autoIncrement | ./xds:constraints/xds:unique/xds:column"/>
              <xs:field xpath="@column | @name"/>
            </xs:keyref>
            <xs:keyref name="keyrefColumnName2" refer="xds:keyColumnName">
              <xs:selector xpath="./xds:constraints/xds:primaryKey/xds:column | ./xds:constraints/xds:foreignKey/xds:column | ./xds:indexes/xds:index/xds:column"/>
              <xs:field xpath="@name"/>
            </xs:keyref>
            <xs:keyref name="keyrefColumnName3" refer="xds:keyColumnName">
              <xs:selector xpath="./xds:constraints/xds:check | ./xds:constraints/xds:check/xds:and | ./xds:constraints/xds:check/xds:or | ./xds:constraints/xds:check/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:or| ./xds:constraints/xds:check/xds:and/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:and/xds:and | ./xds:constraints/xds:check/xds:and/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:and/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:and/xds:and/xds:and | ./xds:constraints/xds:check/xds:and/xds:and/xds:or/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:or/xds:and/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:or/xds:and/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:and/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:and/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:and/xds:or/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:and/xds:or/xds:or/xds:and | ./xds:constraints/xds:check/xds:and/xds:or/xds:or/xds:or/xds:and | ./xds:constraints/xds:check/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:and/xds:and/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:or/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:or/xds:and/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:or/xds:and/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:and/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:and/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:and/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:and/xds:or/xds:or/xds:or/xds:or | ./xds:constraints/xds:check/xds:or/xds:or/xds:or"/>
              <xs:field xpath="xds:column"/>
            </xs:keyref>
          </xs:element>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:element name="schema" type="xds:schema">
    <xs:key name="keyTableName">
      <xs:selector xpath="./xds:table"/>
      <xs:field xpath="@name"/>
    </xs:key>
    <xs:keyref name="keyrefTableName" refer="xds:keyTableName">
      <xs:selector xpath="./xds:table/xds:column/xds:foreignKey | ./xds:table/xds:constraints/xds:foreignKey"/>
      <xs:field xpath="@references"/>
    </xs:keyref>
    <xs:keyref name="keyrefExtendsTableName" refer="xds:keyTableName">
      <xs:selector xpath="./xds:table"/>
      <xs:field xpath="@extends"/>
    </xs:keyref>
  </xs:element>

</xs:schema>