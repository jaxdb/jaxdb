<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.libx4j</groupId>
    <artifactId>rdb</artifactId>
    <version>0.9.8-SNAPSHOT</version>
  </parent>
  <groupId>org.libx4j.rdb</groupId>
  <artifactId>rdb-sqlx</artifactId>
  <version>0.9.8-SNAPSHOT</version>
  <name>${project.groupId}:${project.artifactId}</name>
  <build>
    <testResources>
      <testResource>
        <directory>${project.build.directory}/generated-test-resources/rdb</directory>
      </testResource>
      <testResource>
        <directory>${project.build.directory}/generated-test-sources/jaxb</directory>
      </testResource>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>package-testResources</id>
            <goals>
              <goal>testResources</goal>
            </goals>
            <phase>prepare-package</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <reuseForks>false</reuseForks>
          <additionalClasspathElements>
            <additionalClasspathElement>${project.build.directory}/generated-test-resources/rdb</additionalClasspathElement>
            <additionalClasspathElement>${project.build.directory}/generated-test-sources/jaxb</additionalClasspathElement>
          </additionalClasspathElements>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.lib4j.maven.plugin</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>test-compile</id>
            <goals>
              <goal>validate</goal>
            </goals>
            <phase>integration-test</phase>
          </execution>
          <execution>
            <id>default-transform</id>
            <goals>
              <goal>transform</goal>
            </goals>
            <phase>generate-test-sources</phase>
            <configuration>
              <destDir>${project.build.directory}/generated-test-resources/rdb</destDir>
              <rename>/\.\S+$/.xsd/</rename>
              <stylesheet>src/main/resources/sqlx.xsl</stylesheet>
              <resources>
                <resource>types.ddlx</resource>
                <resource>classicmodels.ddlx</resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.lib4j.maven.plugin</groupId>
        <artifactId>xjc-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>default</id>
            <configuration>
              <destDir>${project.build.directory}/generated-sources/jaxb</destDir>
              <schemas>
                <schema>src/main/resources/sqlx.xsd</schema>
              </schemas>
            </configuration>
          </execution>
          <execution>
            <id>test-resources</id>
            <goals>
              <goal>xjc</goal>
            </goals>
            <phase>generate-test-resources</phase>
            <configuration>
              <destDir>${project.build.directory}/generated-test-sources/jaxb</destDir>
              <schemas>
                <schema>${project.build.directory}/generated-test-resources/rdb/classicmodels.xsd</schema>
                <schema>${project.build.directory}/generated-test-resources/rdb/types.xsd</schema>
              </schemas>
              <bindings>
                <binding>src/main/resources/sqlx.xjb</binding>
              </bindings>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.libx4j.maven.plugin</groupId>
        <artifactId>xsb-maven-plugin</artifactId>
        <configuration>
          <destDir>${project.build.directory}/generated-sources/xsb</destDir>
          <schemas>
            <schema>src/main/resources/sqlx.xsd</schema>
          </schemas>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <activation>
        <property>
          <name>!maven.test.skip</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.libx4j.rdb</groupId>
          <artifactId>rdb-ddlx</artifactId>
          <type>test-jar</type>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.lib4j</groupId>
      <artifactId>lib4j-xml</artifactId>
    </dependency>
    <dependency>
      <groupId>org.lib4j</groupId>
      <artifactId>lib4j-jci</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.libx4j.rdb</groupId>
      <artifactId>rdb-ddlx</artifactId>
    </dependency>
  </dependencies>
</project>